<%= link_to "Reset All Sessions", {:controller => "game_sessions", :action => "index", :reset => true }, class: "default float-left warning button search_button" %>

<h3>Game Sessions</h3>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Session name</th>
      <th>Owner</th>
      <th>Number of players</th>
      <th>Effects used</th>
      <th>Passcode</th>
      <th>Effect buffer</th>
      <th>Lock player pages</th>
      <th>Player display mode</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @game_sessions.each do |game_session| %>
      <tr>
        <td><%= game_session.id %></td>
        <td><%= game_session.session_name %></td>
        <td><%= game_session.owner %></td>
        <td><%= game_session.number_of_players %></td>
        <td><%= game_session.effects_used %></td>
        <td><%= game_session.passcode %></td>
        <td><%= game_session.effect_buffer %></td>
        <td><%= game_session.lock_player_pages %></td>
        <td><%= game_session.player_display_mode %></td>
        <td><%= link_to 'Show', game_session %></td>
        <td><%= link_to 'Edit', edit_game_session_path(game_session) %></td>
        <td><%= link_to 'Destroy', game_session, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Game Session', new_game_session_path %>
